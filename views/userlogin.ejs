        div {
            float: left;
            margin-right: 50px;
        }

        h1 {
            color: rgb(109, 46, 70);
            margin-left: 200px;
            font-size: 80px;
        }

        label {
            color: rgb(109, 46, 70);
            font-size: 30px;
        }

        input.r1 {
            color: rgb(109, 46, 70);
            font-size: 30px;
        }

        input.r2 {
            color: white;
            font-size: 30px;
            border-radius: 15px; /** 設定圓角*/
            background-color: rgb(109, 46, 70);
        }
    </style>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
