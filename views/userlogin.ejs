<body>
    <div>
        <h1>TkuBus</h1>
        <img src="https://img.onl/OdmJse" style="width:600px ; margin-top: -100px ;  " />
    </div>
    <% if (UserInfo==null) { %>
        <script>
            alert('錯誤的帳密');
        </script>
    <% } %>

    <b><p style="font-size: 70px; color: rgb(109,46,70);">Welcome~</p></b>
    <b>
        <p style="font-size: 50px; color: rgb(109,46,70);">登入</p>
    </b>
    <div style="text-align:center;"> <!-- 文字置中 -->
        <form action="/userlogin" method="GET">
            <br>
            <label>請輸入使用者名稱:</label>
            <input class="r1" type="text" name="UserName">
            <br>
            <br>
            <label>請輸入使用者密碼:</label>
            <input class="r1" type="text" name="UserPassword">
            </br>
            <br/>
            <input class="r2" type="submit" value="登入">
            </br>
        </form>
        <br/>
        <!-- 註冊帳號 -->
        <form action="/userlogin/usercreate" method="GET">
            <input class="r2" type="submit" value="註冊帳號">
        </form>
        <form action="/index" method="GET">
            <br>
            <input class="r2" id="submit" type="submit" value="返回主頁 "
                style="position: fixed; right: 1px;bottom: 1px ;">
            </br>
        </form>
    </div>
